const technicalServices = [
    {
        title: "Test Automation Frameworks",
        offerings: "Design and implement robust, scalable, and maintainable automation solutions using <b>Playwright</b>, <b>Cypress</b>, and <b>Appium</b> (Web, API, Mobile).",
        impact: "Reduces time-to-market, lowers manual testing costs, and provides immediate feedback in CI/CD pipelines."
    },
    {
        title: "Performance & Load Testing",
        offerings: "Develop and execute stress, load, and scalability tests using <b>JMeter</b> and cloud-based tools (e.g., BlazeMeter) to identify bottlenecks.",
        impact: "Ensures systems remain stable and performant under peak production traffic and prevents critical outages."
    },
    {
        title: "API & Backend Validation",
        offerings: "Expert validation of microservices and complex APIs using <b>Swagger</b> and <b>Postman</b>. Includes contract testing and database validation (Spanner, MySQL) for data integrity.",
        impact: "Guarantees business logic is flawless at the service layer, preventing defects from reaching the UI."
    },
    {
        title: "CI/CD Integration",
        offerings: "Integrating quality gates into deployment pipelines using tools like <b>GitHub Actions</b> and <b>Jenkins</b> to enforce quality standards automatically.",
        impact: "Establishes a seamless, reliable path to production with zero human intervention for quality checks."
    }
];

const leadershipServices = [
    {
        title: "QA Strategy & Transformation",
        offerings: "Defining a long-term quality vision, shifting culture from fault-finding to fault-prevention (<b>Shift-Left</b>), and establishing governance.",
        impact: "Delivers higher overall product quality and reduces technical debt over time."
    },
    {
        title: "Test Design & Documentation",
        offerings: "Implementing <b>Behavior-Driven Development (BDD)</b> principles (Gherkin) for clear, stakeholder-friendly requirements and test cases.",
        impact: "Improves transparency, simplifies collaboration between technical and business teams, and ensures feature traceability."
    },
    {
        title: "Team Mentorship & Growth",
        offerings: "Hiring, coaching, and mentoring QA and Engineering teams to foster a culture of ownership, continuous learning, and high performance.",
        impact: "Increases team productivity, reduces attrition, and builds internal expertise in complex quality domains."
    },
    {
        title: "Risk Management & Reporting",
        offerings: "Conducting formal risk analysis, developing mitigation strategies, and delivering clear, actionable quality metrics and reports to executive stakeholders.",
        impact: "Enables data-driven decisions on release readiness and ensures resources are focused on the highest-risk areas."
    }
];
