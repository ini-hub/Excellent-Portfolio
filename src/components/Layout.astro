---
import '../styles/global.css';
import Footer from './Footer.astro';
import HorizontalNav from './HorizontalNav.astro'; // <--- NEW IMPORT
import StatePersistenceScript from './StatePersistenceScript.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/EB.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;600;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;600;700&display=swap" rel="stylesheet">  
</head>
<body>
    <HorizontalNav />
    <slot />
    
    {Astro.url.pathname !== '/' && <Footer />}

    <StatePersistenceScript />
</body>
</html>